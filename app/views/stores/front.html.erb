    <!-- <div id="outer_container" class="bg-zinc-100 mb-32 flex flex-col flex-shrink flex-nowrap h-fit"> -->
      <div id="top_container" class="sticky top-0 w-full flex flex-col">
        <p class="bg-orange-500"><%= notice %></p>
        <!-- The header for the store front page, include the navigation buttons to the brewster page -->
        <!-- <section id="page_header" class="max-sm:hidden relative bg-white w-full flex flex-nowrap"> -->
          <section id="page_header" class="relative bg-indigo-900 w-full flex flex-nowrap">
          <div class="m-4 text-white text-lg font-extrabold  text-center flex place-content-stretch">GCC Drink Ordering App</div>
          <nav class="bg-white">
            <ul class="absolute right-0 flex place-content-center">
              <li class="max-sm:hidden p-2 m-2 bg-blue-300 hover:border-2 rounded-full border-blue-800"><%= link_to "Brewster", stores_brewster_path %></li>
            </ul>
          </nav>
        </section>
        <!-- section filterSection - this displays the filter functionally +
             displays the addPerson button when appropiate.
             Note: addPerson is a separate template, as it get dynamically updated from server. -->
        <section id="filter_section" class="bg-indigo-100 flex" data-filter-target="filterSection" >
          <div class="text-orange-600 self-center flex-col">
            <p class="text-black">Select your name below:</p>
            <div class="flex flex-row">
              <span class="h-8 fas fa-search fa-lg p-3 text-center text-indigo-900 self-center border-indigo-950 border-s-2 border-y-2"></span>
              <input id="filterText" data-filter-target="filterText" class="h-8 w-5/6 bg-white text-base text-black border-indigo-900 border-2" data-action="keyup->filter#changeFilterText" type="text" placeholder="Search name" autocomplete="off">
            </div>  
            <span>New here? </span>
            <span data-action="click->filter#showAddPerson" data-filter-target="addPersonPanelButton" class="underline font-bold">Click Here</span>
            <span> to add yourself.</span>
          </div>
        </section>
        <!-- Section addPerson - this includes the form that enables a person to be added -->
        <section id="add_person" data-filter-target="addPerson" class="hidden">
            <%= render "frontaddperson" %>
        </section>
      
        <!-- Section requestSection - this is the section that has the form for ordering a drink -->
        <section id="request_section" class="hidden self-center bg-indigo-900 w-full" data-filter-target="requestSection">
          <%= render "frontrequestdrink" %>
        </section>
      </div>
      <div id="bottom_container" class="overflow-y-autow-full flex-col flex-nowrap flex-shrink w-full">
        <!-- <div id="second_container" class="w-full"> -->
          <!-- Section -->
          <section id="people_section" data-filter-target="people1">
            <%= turbo_stream_from 'people' %>
            <div id="people" data-filter-target="people" data_person_selected="" 
                  class="bg-white flex flex-col flex-nowrap">
              <% @people.each do |person| %>
                <% logger.debug ("person:" + person.inspect) %>
                <%= render "frontperson", person: person %>
              <% end %>
            </div>
          </section>
        <!-- </div>  second container-->

        <!-- <div id="third_container" class="w-full"> -->
          <!-- Section buttonSection - the display of all the buttons to allow you to select your drink -->
          <section id="buttons_section"  class="hidden bg-zinc-100 mb-2 flex-grow flex flex-col flex-nowrap" data-filter-target="buttonSection">    
            <h2 data-filter-target="selectDrinksTitle" class="mb-2 font-serif text-2xl font-bold">Select Your Drink</h2>
            <div id="drinkarea" data-filter-target="drinkArea" class="flex flex-row" >
              <div id="grpDrinks" class="flex flex-col w-5/12 mx-4 mt-4" >
        <% 
                  @buttons.each do |b|
                      if b.group == "Drink" then
                          enablearray ="b" + b.enable.split(/ /).join(", b")
                          #byebug
        %>                 <button data-filter-target="button" data-category="<%= b.group %>" data-action="click->filter#selectDrinkButton" class="xm-8 py-2 px-8 mt-1 border border-width-1 border-orange-600 bg-white sm:hover:bg-yellow-700 text-orange-600 font-bold py-2 px-4 rounded rounded-md" data-enable="<%= enablearray %>"><%= b.name %></button>
        <%             end
                  end
        %><!--
              --><button id="other" data-filter-target="button" data-category="Drink" data-action="click->filter#selectDrinkButton" class="xm-8 py-2 px-8 mt-1 border border-width-1 border-orange-600 bg-white sm:hover:bg-yellow-700 text-orange-600 font-bold py-2 px-4 rounded rounded-md" data-enable="otherInput">Other</button>
              </div><!--
          --><div id="grpoptionsgroups" class="flex flex-col w-5/12 mx-4 mt-4">
        <% 
                  currentGroup = ""
                  @buttons.each do |b|
                      if b.group != "Drink" then
                          if b.group != currentGroup then
                              if currentGroup != "" then
        %>
                                  </div>
        <%
                              end
                              currentGroup = b.group
        %><!--
                            --><div id="grpoptions" class="hidden flex flex-col">
                                  <h2><%= b.group %></h2>
        <%
                          end
        %>
                                  <button id="<%= "b" + b.id.to_s %>" data-filter-target="button" data-category="<%= b.group %>" data-action="click->filter#selectOptionButton" class="xm-8 py-2 px-8 mt-1 border border-width-1 border-orange-600 bg-white sm:hover:bg-yellow-700 text-orange-600 font-bold py-2 px-4 rounded rounded-md"><%= b.name %></button>
        <%
                      end
        %>
        <%
                end
                if currentGroup != "" then
        %>
                  </div><!--
        --><%
                end
        %><!--
              --><!-- <div id="grpoptions" class="hidden flex flex-col">
                    <h2>Other</h2>
                    <input id="otherInput" data-filter-target="button" data-category="Other" data-action="keyup->filter#addTextOther" class="hidden bg-slate-500" type="text" placeholder="Describe drink" title="Drink Description">
                  </div> -->
              </div>
            </div>
            <div id="grpoptions" class="hidden flex flex-col">
              <!-- <h2>Other</h2> -->
              <input id="otherInput" data-filter-target="button" data-category="Other" data-action="keyup->filter#addTextOther" class="hidden bg-slate-500" type="text" placeholder="Describe drink" title="Drink Description">
            </div>   
          </section>   <!-- end of buttons_section -->
        <!-- </div>    end of third container -->
      </div>
    <!-- </div> outer container -->

  </div>
</div>
